<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:dither="true" android:shape="rectangle" android:useLevel="false" android:visible="true">
            <gradient android:startColor="@color/thumb_on_start"
                android:endColor="@color/thumb_on_end"
                android:angle="270"/>
            <corners android:radius="@dimen/track_radius" />
            <size android:width="@dimen/thumb_size" android:height="@dimen/thumb_size" />
            <stroke android:width="@dimen/thumb_border" android:color="@color/thumb_border" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:dither="true" android:shape="rectangle" android:useLevel="false" android:visible="true">
            <gradient android:startColor="@color/color_accent"
                android:endColor="@color/color_accent_dark"
                android:angle="270"/>
            <corners android:radius="15dp" />
            <size android:width="@dimen/thumb_size" android:height="@dimen/thumb_size" />
            <stroke android:width="4dp" android:color="#0000ffff" />
        </shape>
    </item>
</selector>