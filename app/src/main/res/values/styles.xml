<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#235437</item>
        <item name="colorPrimaryDark">#ee1206</item>
        <item name="colorAccent">#643737</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabText</item>
        <item name="tabSelectedTextColor">#f4c30e</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/song_name_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
